{
  "ExchangeratesApiOptions": {
    "HandlerLifetimeMinutes": "5",
    "Name": "ExchangeRates Api URL",
    "Url": "https://api.exchangeratesapi.io"
  },
  "MassTransitOptions": {
    "Host": "rabbitmq://rabbitmq/",
    "Username": "guest",
    "Password": "guest",
    "ReceiveEndpointName": "ecb-exchange-rate-service-endpoint",
    "ReceiveEndpointPrefetchCount": "16"
  },
  "HealthChecksOptions": {
    "PrivateMemoryName": "Private Memory (max. 1GB)",
    "PrivateMemoryMax": "1073741824",
    "ProcessAllocatedMemoryName": "Process Allocated Memory (max. 1GB)",
    "ProcessAllocatedMemoryMax": "1073741824"
  },
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "Exchange.Rates.Ecb.Polling.Api Health Checks",
        "Uri": "/health"
      }
    ],
    "Webhooks": [],
    "EvaluationTimeinSeconds": 10,
    "MinimumSecondsBetweenFailureNotifications": 60
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "StartsWith(SourceContext, 'Microsoft')"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] [{SourceContext}] {Message}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Verbose"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./Log/Log_.txt",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] [{MemberName}] {Message}{NewLine}{Exception}",
          "fileSizeLimitBytes": 1073741824, // 1Gb
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "restrictedToMinimumLevel": "Information",
          "retainedFileCountLimit": "3",
          "shared": true,
          "flushToDiskInterval": "00:00:01"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "AllowedHosts": "*"
}
